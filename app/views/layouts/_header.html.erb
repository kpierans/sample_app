<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <%= link_to "Poofer", '#', id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Strona domowa", root_path %></li>
          <li><%= link_to "Pomoc", help_path%></li>

          <% if signed_in? %>
              <li><%= link_to "Użytkownicy", users_path %></li>
              <p class="navbar-text"><span class="glyphicon glyphicon-user"></span><%= @current_user.name %></p>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"> mójPoofer <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Mój profil", current_user %></li>
                  <li><%= link_to "Zmień dane", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Wyloguj się", signout_path, method: "delete" %>
                  </li>
                </ul>
          <% else %>
              <li><%= link_to "Zaloguj się", signin_path %></li>
              <li><%= link_to "Nie masz konta? Zarejestruj się", signup_path, class: "btn navbar-btn btn-warning" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
</header>